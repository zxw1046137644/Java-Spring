<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!--使用静态工厂创建bean-->
    <bean id="car1" factory-method="getCar" class="Entry.StaticFactory">
        <constructor-arg value="BMW"></constructor-arg>
    </bean>
    <!--使用动态工厂创建bean-->
    <bean id="beanFactory" class="Entry.InstanceCarFactory"></bean>
    <bean id="car2" factory-method="getCar" factory-bean="beanFactory">
        <constructor-arg value="AUD"></constructor-arg>
    </bean>
</beans>